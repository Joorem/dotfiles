[core]
    editor = vim
    pager  = less -R

[commit]
    gpgsign = true

[color]
    branch      = auto
    diff        = auto
    interactive = auto
    status      = auto
    ui          = auto

[diff]
    tool      = vimdiff
    algorithm = patience

[fetch]
    prune = true

[merge]
    tool = vimdiff

[push]
    default = current

[alias]
    co   = checkout
    cb   = checkout -b
    br   = branch
    ci   = commit
    st   = status
    lg   = log --graph --oneline --decorate
    lgg  = log --graph --decorate
    last = log -1 HEAD
