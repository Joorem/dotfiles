[core]
    editor = vim
    pager  = less -R

[commit]
    gpgsign = true

[color]
    branch      = auto
    diff        = auto
    interactive = auto
    status      = auto
    ui          = auto

[diff]
    tool      = vimdiff
    algorithm = patience

[fetch]
    prune = true

[gpg]
    program = gpg2

[help]
    autocorrect = 1

[merge]
    tool = vimdiff

[push]
    default = current

[alias]
    co       = checkout
    cb       = checkout -b
    br       = branch
    ci       = commit -m
    st       = status
    l        = log --graph --oneline --decorate --max-count=30
    lg       = log --graph --oneline --decorate
    lgg      = log --graph --decorate --show-signature
    last     = log -1 HEAD
    uncommit = reset HEAD^
